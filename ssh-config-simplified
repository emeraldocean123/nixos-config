# Simplified SSH Configuration - Unified Key Only
# This config uses the unified key for EVERYTHING

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# MSI GE75 Raider NixOS
Host msi msi-nixos
    HostName 192.168.1.106
    User joseph
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# HP dv9500 Pavilion NixOS
Host hp hp-nixos
    HostName 192.168.1.104
    User joseph
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# Default settings for all hosts
Host *
    IdentityFile ~/.ssh/id_ed25519_unified
    AddKeysToAgent yes
    ServerAliveInterval 60
    ServerAliveCountMax 3
    IdentitiesOnly yes
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# Default settings for all hosts
Host *
    IdentityFile ~/.ssh/id_ed25519_unified
    AddKeysToAgent yes
    ServerAliveInterval 60
    ServerAliveCountMax 3
    IdentitiesOnly yes
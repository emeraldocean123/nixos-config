# Complete SSH Configuration with Unified Key
# Includes all systems: GitHub, NixOS laptops, Proxmox, LXCs, and Synology NAS

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# Synology NAS
Host nas synology
    HostName 192.168.1.10
    User joseph
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes
    # Password auth will be disabled on Synology

# MSI GE75 Raider NixOS
Host msi msi-nixos
    HostName 192.168.1.106
    User joseph
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# HP dv9500 Pavilion NixOS
Host hp hp-nixos
    HostName 192.168.1.104
    User joseph
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes

# Proxmox Host
Host proxmox pve
    HostName 192.168.1.40
    User root
    IdentityFile ~/.ssh/id_ed25519_unified
    IdentitiesOnly yes


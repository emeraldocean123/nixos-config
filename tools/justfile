# Invoke with `just <recipe>`

set shell := ["bash", "-lc"]

fmt:
    treefmt

lint:
    statix check
    deadnix

fix:
    statix fix || statix check
    deadnix --edit || deadnix --check
    treefmt

# Optional: run pre-commit across the repo if installed
pre-commit:
    pre-commit run -a || true
